<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple CRUD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="css/styles.css">
</head>
<body>
    <div class="container-fluid">
        <div class="container border mt-1 bg-secondary bg-opacity-10 rounded">
            <header class="top-text">
                <p class="text-center fw-bold">CRUD Application</p>
            </header>
            <div class="d-flex justify-content-center">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">HOME</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/adduser">ADICIONAR USU√ÅRIO</a>
                    </li>
                </ul>
            </div>
        </div>
        <div class="container mt-5  border bg-secondary bg-opacity-10 rounded">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Age</th>
                    </tr>
                </thead>
                <tbody>
                    <% userData.forEach(function(item) { %>
                        <tr>
                            <td scope="row"><%= item.userId %></td>
                            <td><%= item.name %></td>
                            <td><%= item.email %></td>
                            <td><%= item.age %></td>
                            <td>
                                <form action="edituser" method="post" class="d-inline">
                                    <button class="btn btn-info">Editar</button>
                                </form>
                                <form action="deleteuser?uuid=<%= item.uuid %>" method="post" class="d-inline">
                                    <button class="btn btn-danger">Deletar</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>